{
  "name": "codesnippets",
  "displayName": "CodeSnippets",
  "description": "One-click export/import VSCode dev environment snapshots",
  "publisher": "srinivas-batthula",
  "repository": {
    "type": "git",
    "url": "https://github.com/HimanshuBijja/code-snippets-platform"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Education",
    "Extension Packs",
    "Formatters"
  ],
  "keywords": [
    "setup",
    "exchange dev-env",
    "code-snippets"
  ],
  "icon": "src/assets/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CodeSnippets : Settings",
      "properties": {
        "codesnippets.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Base URL for CodeSnippets backend API"
        },
        "codesnippets.secretKey": {
          "type": "string",
          "default": "codesnippets.jwt",
          "description": "Secret-Key for storing JWT"
        },
        "codesnippets.extensionName": {
          "type": "string",
          "default": "CodeSnippets"
        }
      }
    },
    "commands": [
      {
        "command": "codesnippets.intro",
        "title": "Intro Starter : CodeSnippets"
      },
      {
        "command": "codesnippets.login",
        "title": "Login / Configure API-KEY : CodeSnippets"
      },
      {
        "command": "codesnippets.logout",
        "title": "Logout / Clear API-KEY : CodeSnippets"
      },
      {
        "command": "codesnippets.exportSnippet",
        "title": "Export Selected Code as Snippet : CodeSnippets"
      },
      {
        "command": "codesnippets.importSnippet",
        "title": "Import Snippet by ID : CodeSnippets"
      },
      {
        "command": "codesnippets.exportSnapshot",
        "title": "Export Current Dev Environment as Snapshot : CodeSnippets"
      },
      {
        "command": "codesnippets.importSnapshot",
        "title": "Import Dev Environment Snapshot by ID  : CodeSnippets"
      },
      {
        "command": "codesnippets.openSnapshotFiles",
        "title": "Open VSCode Dev-Env Snapshot Files : CodeSnippets"
      },
      {
        "command": "codesnippets.search",
        "title": "Search Snippets / Snapshots : CodeSnippets"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codesnippets.exportSnippet",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "codesnippets.importSnippet",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}